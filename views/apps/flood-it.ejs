<% layout("layouts/boilerplate") %>

<link rel="stylesheet" href="style/apps/flood-it.css">
<div class="row mt-5" id="title-row">
    <div class="col d-flex justify-content-center"><h2 id="title" class="py-3">Flood It</h2></div>
</div>
<div class="row">
    <div class="col d-flex justify-content-center">
        <table id="board">
        </table>
    </div>
</div>
<div class="row my-3">
    <div class="col d-flex justify-content-center">
        <button class="btn mx-2" id="start_button">Start Game</button>
        <button class="btn mx-2" id="reset_button">Reset Game</button>
    </div>
</div>
<div class="row mb-3">
    <div class="col d-flex flex-column align-items-center">
        <div id="game_guide" class="text-center">Select a starting cell</div>
        <div id="move-counter" class="d-none my-2 text-center"></div>
    </div>
</div>
<script src="js/apps/flood-it.js"></script>