<% layout("layouts/boilerplate") %>
<title>Blackjack</title>
<link rel="stylesheet" href="style/apps/blackjack.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
<div class="row mt-5">
    <div class="col d-flex justify-content-center">
        <h2 id="title" class="py-3">BlackJack</h2>
    </div>
</div>
<div class="row" id="dealer_row">
    <span class="col-4 d-flex justify-content-center align-items-center">Dealer hand:</span>
    <div class="col-7 d-flex justify-content-left" id="dealer_cards"></div>   
</div>
<div class="row" id="player_row">
    <span class="col-4 d-flex justify-content-center align-items-center">Player hand:</span>
    <div class="col-7 d-flex justify-content-left" id="player_cards"></div>
</div>
<div class="row" id="start_row">
    <div class="col-4 d-flex justify-content-center align-items-center">Account balance: 100</div>
    <div class="col-3 d-flex justify-content-center align-items-center">
        <span class="d-inline-block mx-3">Choose your bet:</span>
        <input type="number" id="bet_number" value="10" min="1" max="100" step="any"/>
    </div>
    <div class="col-4 d-flex justify-content-center"><button class="btn btn-light" id="start_button">Start the game</button>
    </div>
</div>
<div class="row" id="decision_row" class="hidden">
    <div class="col-4 d-flex justify-content-evenly align-items-center">
        <span id="account_balance"></span>
        <span id="current_bet"></span>
    </div>
    <div class="col-7 d-flex justify-content-evenly">
        <button class="btn btn-light" id="hit_button">Hit</button>
        <button class="btn btn-light" id="stay_button">Stay</button>
        <button class="btn btn-light" id="double_button">Double</button>
    </div>
</div><div class="row" id="message_row"></div>
<div class="row" id="end_row">
    <div class="col-5 col-md-4 d-flex justify-content-evenly align-items-center"></div>
    <div class="col-7 d-flex justify-content-evenly"><button class="btn btn-light" id="reset_button">Play another round</button></div>
</div>

<script src="js/apps/blackjack.js"></script>